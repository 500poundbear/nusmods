<div class="row">
  <div class="col-md-12">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li class="active"><a role="tab" data-toggle="tab">Venue Information</a></li>
      <li><a href="/venueavailability" role="tab" data-toggle="tab">Find Available Venues</a></li>
    </ul>

    <h1 class="nm-page-heading">Venue Lookup</h1>
    <hr>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label class="control-label" for="venue">Search Venue:</label>
          <input type="text" class="form-control js-nm-venue-input" value="{{this.selectedVenueName}}" placeholder="e.g. COM1-0114">
        </div>
        <button type="submit" class="js-nm-venue-search btn btn-primary">Search</button>
      </div>
    </div>
    <hr>
    {{#if selectedVenue}}
      <h3>Venue Information for "{{this.selectedVenueName}}"</h3>
      <hr>

      <div class="nm-timetable-flex-container">
        <div class="nm-timetable-flex">
          <div class="nm-timetable-flex-row nm-timetable-timing">
            <div class="nm-timetable-flex-cell"></div>
            <div class="nm-timetable-flex-cell">0800</div>
            <div class="nm-timetable-flex-cell">0900</div>
            <div class="nm-timetable-flex-cell">1000</div>
            <div class="nm-timetable-flex-cell">1100</div>
            <div class="nm-timetable-flex-cell">1200</div>
            <div class="nm-timetable-flex-cell">1300</div>
            <div class="nm-timetable-flex-cell">1400</div>
            <div class="nm-timetable-flex-cell">1500</div>
            <div class="nm-timetable-flex-cell">1600</div>
            <div class="nm-timetable-flex-cell">1700</div>
            <div class="nm-timetable-flex-cell">1800</div>
            <div class="nm-timetable-flex-cell">1900</div>
            <div class="nm-timetable-flex-cell">2000</div>
            <div class="nm-timetable-flex-cell">2100</div>
            <div class="nm-timetable-flex-cell">2200</div>
            <div class="nm-timetable-flex-cell">2300</div>
          </div>
          {{#each selectedVenue}}
            <div class="nm-timetable-flex-row">
              <div class="nm-timetable-flex-cell nm-timetable-day"><strong>{{this.shortDay}}</strong></div>
              {{#each this.timetable}}
                <div class="nm-timetable-flex-cell {{this.class}} box-{{this.width}}" style="flex-grow: {{this.width}}">
                  <a class="nm-timetable-flex-module-name" href="/modules/{{this.module}}">{{this.module}}</a>
                </div>
              {{/each}}
            </div>
          {{/each}}
        </div>
      </div>

      <hr>
      
      <div>
        {{#each selectedVenue}}
          <div class="row">
            <div class="col-sm-2">
              <strong>{{this.day}}</strong>
            </div>
            <div class="col-sm-10">
              <div class="row">
                {{#if this.classes}}
                  {{#each this.classes}}
                    <div class="col-sm-3">
                      <dl>
                        <dd><strong>{{this.StartTime}} - {{this.EndTime}}</strong></dd>
                        <dd><a href="/modules/{{this.ModuleCode}}">{{this.ModuleCode}}</a></dd>
                        <dd>{{this.LessonType}} [{{this.ClassNo}}]</dd>
                        <dd>{{this.WeekText}}</dd>
                      </dl>
                    </div>
                  {{/each}}
                {{else}}
                  <div class="col-md-12">
                    <p>No classes</p>
                  </div>
                {{/if}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      {{#if this.selectedVenueName}}
        <p>No venue information found for <strong>{{this.selectedVenueName}}</strong>.</p>
      {{/if}}
    {{/if}}
    </div>
  </div>
</div>
